generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("POSTGRES_PRISMA_URL")
  directUrl         = env("POSTGRES_URL_NON_POOLING")
  shadowDatabaseUrl = env("POSTGRES_URL_NON_POOLING")
}

model user {
  id    String @id
  name  String
  email String @unique
  cars  car[]
}

model car {
  id         Int      @id @default(autoincrement())
  name       String
  owner_id   String
  created_at DateTime @default(now())
  owner      user     @relation(fields: [owner_id], references: [id])
  refuel     refuel[]

  @@unique([name, owner_id])
}

model refuel {
  id          Int      @id @default(autoincrement())
  car_id      Int
  fuel        fuel?
  payment     payment?
  full        Boolean?
  liter_price Float
  liters      Float
  total_price Float
  created_at  DateTime @default(now())
  distance    Int
  car         car      @relation(fields: [car_id], references: [id])
}

enum fuel {
  Alcool
  Gasolina
  Diesel
  Outro
}

enum payment {
  Credito
  Debito
  Dinheiro
  Pix
  Outro
}
